<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mod02Exer02Modified.View.OfflinePage"
             Title="OfflinePage">
    <VerticalStackLayout
        Padding="30"
        Spacing="20"
        VerticalOptions="CenterAndExpand"
        HorizontalOptions="CenterAndExpand">

        <Label 
            Text="You are offline!" 
            FontSize="28" 
            FontAttributes="Bold" 
            HorizontalOptions="Center" 
            VerticalOptions="Center"/>

        <Button 
            Text="Retry" 
            Clicked="OnRetryButtonClicked" 
            BackgroundColor="LightBlue" 
            TextColor="White"
            FontAttributes="Bold"
            CornerRadius="10"
            HeightRequest="50"
            WidthRequest="150"
            HorizontalOptions="Center"/>

        <Button 
            Text="Close" 
            Clicked="OnCloseButtonClicked" 
            BackgroundColor="LightBlue" 
            TextColor="White"
            FontAttributes="Bold"
            CornerRadius="10"
            HeightRequest="50"
            WidthRequest="150"
            HorizontalOptions="Center"/>
        
    </VerticalStackLayout>
</ContentPage>